<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivProfile_View_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvProfile_View_Usrname"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/ivProfile_View_pic"
        android:layout_toEndOf="@+id/ivProfile_View_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvProfile_View_ScreenName"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvProfile_View_Usrname"
        android:layout_toRightOf="@+id/ivProfile_View_pic"
        android:layout_toEndOf="@+id/ivProfile_View_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvProfileDescription"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivProfile_View_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:autoLink="all"
        android:clickable="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlProfileCounter"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/tvProfileDescription"
        >


        <TextView
            android:id="@+id/tvProfileFollowingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="5"
            android:layout_alignParentLeft="true" />




        <TextView
            android:id="@+id/tvProfileFollowersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_centerInParent="true"
            android:text="5"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/tvProfileFollowingCount"/>



    </RelativeLayout>

</RelativeLayout>